<%= render partial: "shared/errors"%>
<form action="/host/listings" method = "post" >
	<input type="hidden" name ="authenticity_token" value="<%= form_authenticity_token%>">

	<label for ="title">Title</label>
	<input type="text" name="listing[title]" id="title" value="<%= @listing.title%>">

	<label for ="about">About</label>
	<textarea name="listing[about]" id="about" value="<%= @listing.about%>"></textarea>

	<div data-controller= "address">
		<label for = "address">Address</label>
		<input type="text" id="address" autocomplete="off">
    </div>

	<label for ="title">How many people max can stay?</label>
	<input type="number" id="max_guests"name= "listing[max_guests]" value="<%= @listing.max_guests%>" min= "1" max = "100">

	<input type="submit" value="Create Listing">
</form>
